rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para Serviços (services)
    // Qualquer pessoa pode ver os serviços (leitura pública)
    // Apenas usuários autenticados (admin) podem criar, editar ou excluir
    match /services/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para Agendamentos (appointments)
    // Qualquer pessoa pode criar um agendamento (cliente público)
    // Qualquer pessoa pode ler para verificar disponibilidade
    match /appointments/{document=**} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if request.auth != null;
    }

    // Regras para Equipe (team)
    // Qualquer pessoa pode ver a equipe (para escolher barbeiro)
    match /team/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para Produtos (products)
    match /products/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para Despesas (expenses)
    match /expenses/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Regras para Receitas Extras (customRevenues)
    match /customRevenues/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
